FROM ubuntu:24.04

ENV DEBIAN_FRONTEND=noninteractive

# Minimal tools to fetch and run the installer and allow HTTPS cloning
RUN apt-get update && apt-get install -y \
  bash zsh git curl ca-certificates unzip jq diffutils \
  && rm -rf /var/lib/apt/lists/* \
  && git config --global url."https://github.com/".insteadOf "git@github.com:"

# Start in an interactive bash by default
CMD ["/bin/bash", "-l"]

